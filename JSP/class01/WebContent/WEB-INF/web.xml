<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>class01</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
 <!-- 프로그램 전체에서 공유가능한 데이터 등록 -->    
  <context-param>
  	<param-name>logEnabled</param-name>
  	<param-value>false</param-value>
  </context-param>

  <context-param>
  	<param-name>debugLevel</param-name>
  	<param-value>1</param-value>
  </context-param>
  
  <!-- 에러페이지 지정 -->
  <!-- http 코드로 지정 -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/errorPage/viewError404.jsp</location>
  </error-page>
  
  <error-page>
  	<error-code>500</error-code>
  	<location>/errorPage/viewError500.jsp</location>
  </error-page>
  
  <!-- 에러타입으로 지정 -->
  <error-page>
  	<exception-type>java.lang.NullPointerException</exception-type>
  	<location>/errorPage/viewErrorNull.jsp</location>
  </error-page>
  
  <!-- 자동코드 추가 설정 -->
  <jsp-config>
  	<jsp-property-group>
  		<url-pattern>/actiontag/view/*</url-pattern>
  		<include-prelude>/common/variable.jspf</include-prelude>
  		<include-coda>/common/footer.jspf</include-coda>
  	</jsp-property-group>
  </jsp-config>
  
</web-app>